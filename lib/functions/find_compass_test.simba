program template;
{$DEFINE SMART} // Use Smart

{$IFDEF SMART}
  {$DEFINE DX} // Use the DirectX plugin for Smart
{$ENDIF}

{$i ai.simba}

var
  myItem : TRSItem;
  loc : TPoint;
  i : integer;


begin
  // True - Skip Login Check
  // False  - Wait for lobby to appear
  SetupRS(True);
  Lobby.Play();

  myItem.mainColour := 2173229;
  myItem.AddPoint(-3, -2, 2370865);
  myItem.AddPoint(0, -1, 6321277);

  // Find the compass center. Should be (614, 34)
  for i := 1 to 100000 do
  begin
    loc := myItem.Find(0, 0, 799, 599);
    writeln('(' + toStr(i) + ') Compass: ' + toStr(loc.x - 15) + ', ' + toStr(loc.Y + 16));
    wait(500);
  end;


end.
