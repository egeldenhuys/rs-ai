(*
keyboard
====

Description:
  Provides functions for entering text into the game

*)

const
  MIN_WAIT = 20;
  RND_WAIT = 40;

procedure SendText(text : string);
var
  i : integer;

begin
  for i := 1 to Length(text) do
  begin

    SendKeys(text[i], MIN_WAIT + Random(RND_WAIT) , MIN_WAIT + Random(RND_WAIT));

    wait(MIN_WAIT + Random(RND_WAIT));
  end;

end;



