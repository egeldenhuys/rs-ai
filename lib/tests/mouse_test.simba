procedure TestMouse2();
var
  points : Array[0..5] of TPoint;
  speeds : Array[0..5] of Integer;
  x, y : integer;
  i, j, mX, mY : integer;

begin

  points[0] := [100, 100];
  speeds[0] := 5;

  points[1] := [800, 100];
  speeds[1] := 10;

  points[2] := [800, 200];
  speeds[2] := 15;

  points[3] := [100, 200];
  speeds[3] := 25;

  points[4] := [100, 300];
  speeds[4] := 25;

  points[5] := [800, 300];
  speeds[5] := 30;

  for i := 0 to 10 do
  begin
    x := RandomRange(0, 1900);
    y := RandomRange(0, 900);

    writeln('Testing point: ' + toStr(x) + ', ' + toStr(y));

    RelativeMouse(x, y, 10);

  end;

end;

procedure TestMouse();
var
  points : Array[0..19] of TPoint;
  i, j, mX, mY : integer;

begin

  points := GetMousePoints();

  for i := 0 to 19 do
  begin
    writeln('Testing point: ' + toStr(points[i].X) + ', ' + toStr(points[i].Y));

    DiagMouse(points[i].X, points[i].Y, 10);

  end;

end;


begin
  ClearDebug();
  ActivateClient();

  TestMouse();

end.
